<template><srai>places</srai></template>
</category>
<category>
<pattern>_KITCHEN</pattern>
<template><srai>places</srai></template>
</category>
<category>
<pattern>DINING ROOM</pattern>
<template><srai>places</srai></template>
</category>  
  
      <!-- shortcuts objects-->  
   <category>
  <pattern>* TABLES</pattern>
  <template><srai>object</srai></template>
  </category>
  <category>
  <pattern>DRINKS</pattern>
  <template><srai>object</srai></template>
  </category>
  <category>
  <pattern>1</pattern>
  <template>one</template>
  </category>
  <category>
  <pattern>FOOD</pattern>
  <template><srai>object</srai></template>
  </category>
  <category>
  <pattern>THINGS</pattern>
  <template><srai>object</srai></template>
  </category>
    
    
    
    <!-- common conectors -->
    <category>
    <pattern>HOW MANY *</pattern>
    <template><srai><star index="1"/></srai></template>
    </category>

</aiml>