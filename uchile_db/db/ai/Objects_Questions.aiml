<?xml version="1.0" encoding="UTF-8"?>
<aiml version="2.0">
<!-- PREGUNTAS SOBRE OBJETOS-->

    <category>
        <pattern>_THE * FOOD </pattern>
        <template>object <star /> food </template>
    </category>

    <category>
        <pattern>WHAT IS THE * DRINK </pattern>
        <template>object <star /> drink </template>
    </category>

    <category>
        <pattern>WHERE CAN I FIND THE * </pattern>
        <template>object where <star /> </template>
    </category>

    <category>
        <pattern>COLOR OF THE * </pattern>
        <template>object color <star index="1"/> place<think><set name="last_color"><star index="1"/></set><set name="last_question"><star index="1"/></template>
    </category>

    <category>
        <pattern>WHAT OBJECTS ARE IN THE * </pattern>
        <template>object in <star index="1"/> <think><set name="last_place"><star index="1"/></set><set name="last_question"><star index="1"/></set></think></template>
    </category>
    <category>
        <pattern>LAST QUESTION PLACE</pattern>
        <template><get name="last_place"/></template>
    </category>
    <category>
        <pattern>* ARE IN THE * </pattern>
        <template>object many <star index="1" /> place <star index="2"/></template>
    </category>
    
    <category>
    <pattern>_ THE SAME * </pattern>
    <template>objects last <star/><get name="last_place"/></template>
    </category>
<!-- questions with reference -->
<category>
      <pattern>_ THE SAME * </pattern>
      <template>
         <condition name="last_question" value="last_place">
            objects last <star/><get name="last_place"/>
         </condition>
        <condition name="last_question" value="last_color">
         objects last <star/><get name="last_color"/>
          </condition>
      </template>
   </category> 
<!-- shortcuts places -->
